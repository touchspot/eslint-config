{
	"$schema": "node_modules/knip/schema.json",
	"include": ["dependencies", "exports", "files", "types"],
	"workspaces": {
		".": {
			"ignoreDependencies": [
				"@types/fs-extra",
				"better-typescript-lib",
				"commitizen",
				"typescript-transform-paths",
				"zx"
			],
			"ignoreFiles": [".claude/**"]
		},
		"packages/eslint-config": {
			"entry": ["lib/**", "test/**/*.test.*"],
			"project": ["src/**", "test/**"],
			"ignoreDependencies": ["@eslint/config-inspector", "next", "react", "react-dom", "tailwindcss"]
		},
		"playgrounds/*": {
			"entry": ["src/**", "*.ts"]
		}
	}
}
