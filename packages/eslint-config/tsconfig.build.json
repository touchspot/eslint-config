{
	"extends": "./tsconfig.json",
	"compilerOptions": {
		"noEmit": false,
		"rootDir": ".",
		"outDir": "dist",
		"sourceMap": true,
		"declaration": true,
		"declarationMap": true,
		"plugins": [
			{ "transform": "typescript-transform-paths" },
			{ "transform": "typescript-transform-paths", "afterDeclarations": true }
		]
	},
	"exclude": ["test", "*.ts"]
}
