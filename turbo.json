{
	"$schema": "https://turbo.build/schema.json",
	"globalDependencies": ["pnpm-lock.yaml"],
	"ui": "tui",
	"tasks": {
		"build": {
			"inputs": ["lib/", "src/", "tsconfig*.json"],
			"outputs": ["dist/"]
		},
		"//#check": {
			"dependsOn": ["check:format", "check:lint", "check:unused"]
		},
		"check": {
			"dependsOn": ["check:format", "check:lint", "check:type"]
		},
		"//#check:format": {
			"inputs": ["$TURBO_DEFAULT$", "!.turbo/", "!packages/", "!playgrounds/"],
			"outputs": []
		},
		"check:format": {
			"inputs": ["$TURBO_DEFAULT$", "!.turbo/", "!coverage/", "!dist/", "!**/__snapshots__/"],
			"outputs": []
		},
		"//#check:lint": {
			"dependsOn": ["^build"],
			"inputs": ["*.js", "*.ts", "tsconfig.json"],
			"outputs": []
		},
		"check:lint": {
			"dependsOn": ["^build"],
			"inputs": ["lib/", "src/", "test/", "*.js", "*.ts", "tsconfig.json", "!**/__snapshots__/"],
			"outputs": []
		},
		"check:type": {
			"dependsOn": ["^build"],
			"inputs": ["lib/", "src/", "test/", "*.ts", "tsconfig.json", "!**/__snapshots__/"],
			"outputs": []
		},
		"//#check:unused": {
			"dependsOn": ["^build"],
			"outputs": []
		},
		"//#ci": {
			"dependsOn": ["check"]
		},
		"ci": {
			"dependsOn": ["check", "test"]
		},
		"dev": {
			"persistent": true
		},
		"//#fix": {
			"dependsOn": ["fix:format", "fix:lint"]
		},
		"fix": {
			"dependsOn": ["fix:format", "fix:lint"]
		},
		"//#fix:format": {
			"cache": false
		},
		"fix:format": {
			"cache": false
		},
		"//#fix:lint": {
			"dependsOn": ["^build", "fix:format"],
			"cache": false
		},
		"fix:lint": {
			"dependsOn": ["^build", "fix:format"],
			"cache": false
		},
		"inspect": {
			"dependsOn": ["^build", "build"],
			"persistent": true
		},
		"test": {
			"dependsOn": ["^build"],
			"inputs": ["lib/", "src/", "test/", "*.ts", "tsconfig.json", "vitest.*", "!**/__snapshots__/"],
			"outputs": []
		},
		"test:update": {
			"dependsOn": ["^build"],
			"inputs": ["lib/", "src/", "test/", "*.ts", "tsconfig.json", "vitest.*", "!**/__snapshots__/"],
			"outputs": ["**/__snapshots__/**"]
		}
	}
}
