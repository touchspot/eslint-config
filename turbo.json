{
	"$schema": "https://turbo.build/schema.json",
	"globalDependencies": ["package.json", "pnpm-lock.yaml"],
	"ui": "tui",
	"tasks": {
		"//#build": {
			"inputs": ["lib/**", "src/**", "tsconfig.json"],
			"outputs": ["dist/**"]
		},
		"//#check": {
			"dependsOn": ["check:format", "check:lint", "check:type", "check:unused"]
		},
		"check": {
			"dependsOn": ["check:format", "check:type"]
		},
		"//#check:format": {
			"outputs": []
		},
		"check:format": {
			"outputs": []
		},
		"//#check:lint": {
			"dependsOn": ["build"],
			"inputs": ["lib/**", "src/**", "*.js", "tsconfig.json"],
			"outputs": []
		},
		"//#check:type": {
			"dependsOn": ["build"],
			"inputs": ["lib/**", "src/**", "*.js", "tsconfig.json"],
			"outputs": []
		},
		"check:type": {
			"dependsOn": ["//#build"],
			"inputs": ["src/**", "*.js", "tsconfig.json"],
			"outputs": []
		},
		"//#check:unused": {
			"dependsOn": ["build"],
			"outputs": []
		},
		"//#ci": {
			"dependsOn": ["check"]
		},
		"ci": {
			"dependsOn": ["check", "test"]
		},
		"//#fix": {
			"dependsOn": ["fix:format", "fix:lint"]
		},
		"fix": {
			"dependsOn": ["fix:format", "fix:lint"]
		},
		"//#fix:format": {
			"cache": false
		},
		"fix:format": {
			"cache": false
		},
		"//#fix:lint": {
			"dependsOn": ["fix:format"],
			"cache": false
		},
		"fix:lint": {
			"dependsOn": ["fix:format"],
			"cache": false
		},
		"test": {
			"dependsOn": ["//#build"],
			"cache": false
		}
	}
}
