{
	"extends": ["@tsconfig/node22/tsconfig.json", "@tsconfig/strictest/tsconfig.json"],
	"compilerOptions": {
		"outDir": "dist",
		"sourceMap": true,
		"declaration": true,
		"declarationMap": true,
		"target": "ES2023",
		"module": "NodeNext",
		"moduleResolution": "NodeNext",
		"paths": {
			"#pkg/*": ["./src/*"]
		}
	},
	"include": ["lib", "src", "typings"]
}
